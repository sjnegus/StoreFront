@model StoreFront.DATA.EF.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="m-3">
    <h1 class="text-light">Edit</h1>

    <h4 class="text-light">@Model.CategoryName</h4>
</div>
<hr />
<div class="row">
    <div class="col-md-4 text-light m-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-sm btn-secondary m-3">Back to Categories</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
