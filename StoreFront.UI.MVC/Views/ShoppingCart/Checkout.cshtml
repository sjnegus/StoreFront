@model CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<section class="product_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>Your <span>Cart</span></h2>
        </div>
    </div>
</section>
<div class="row">
    <div class="col-md-6 offset-3 border shadow rounded p-4">
        <form asp-action="Checkout">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="ShipToName" class="form-control" />
                <label asp-for="ShipToName" class="control-label"></label>
                <span asp-validation-for="ShipToName" class="invalid-feedback"></span>
            </div>
            <div class="form-floating">
                <input asp-for="ShipCity" class="form-control" />
                <label asp-for="ShipCity" class="control-label"></label>
                <span asp-validation-for="ShipCity" class="invalid-feedback"></span>
            </div>
            <div class="form-floating">
                <input asp-for="ShipState" class="form-control" />
                <label asp-for="ShipState" class="control-label"></label>
                <span asp-validation-for="ShipState" class="invalid-feedback"></span>
            </div>
            <div class="form-floating">
                <input asp-for="ShipZip" class="form-control" />
                <label asp-for="ShipZip" class="control-label"></label>
                <span asp-validation-for="ShipZip" class="invalid-feedback"></span>
            </div>
            <div class="form-floating d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" value="Create" class="btn btn-primary">Confirm</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
